<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Text">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textColor">@color/fg_deep_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Fresh.Display">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/fg_deep_green</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text.Fresh.Headline">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/fg_deep_green</item>
    </style>

    <style name="Text.Fresh.BodyLarge">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fg_deep_green</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="Text.Fresh.Body">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fg_deep_green</item>
        <item name="android:lineHeight">22sp</item>
    </style>

    <style name="Text.Fresh.Button">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fg_white</item>
    </style>

    <style name="Text.Fresh">
        <item name="android:fontFamily">@font/itimregular</item>
        <item name="android:textColor">@color/fg_deep_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

</resources>
