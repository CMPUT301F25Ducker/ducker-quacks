<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fg_cream">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top bar include -->
        <include
            layout="@layout/include_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtEventTitle"
            style="@style/Text.Fresh.Display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="Event 1 ..." />

        <!-- Poster -->
        <!-- Scrollable image gallery -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/imageGallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poolphoto"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poolphoto"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poolphoto"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Body content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/Text.Fresh.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/txtDescription"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description goes here." />

            <TextView
                style="@style/Text.Fresh.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date (Maybe Recurring):" />

            <TextView
                android:id="@+id/txtDates"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TBD" />

            <TextView
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Opens:" />

            <TextView
                android:id="@+id/txtOpen"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TBD" />

            <TextView
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Deadline:" />

            <TextView
                android:id="@+id/txtDeadline"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtCost"
                    style="@style/Text.Fresh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cost: —" />

                <TextView
                    android:id="@+id/txtSpots"
                    style="@style/Text.Fresh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Spots: —" />
            </LinearLayout>
        </LinearLayout>

        <!-- Two-button layout (Undecided) -->
        <LinearLayout
            android:id="@+id/areaButtons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeft"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Decline"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_filled_brick"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRight"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Accept"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_primary_green"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Single-CTA area (Not in circle / In circle / Duck) -->
        <LinearLayout
            android:id="@+id/singleCtaArea"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSingleCta"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Primary"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_primary_charcoal"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
