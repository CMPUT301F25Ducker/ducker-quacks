<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/organizer_name"
            style="@style/Text.Fresh.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Name" />

        <TextView
            android:id="@+id/organizer_email"
            style="@style/Text.Fresh.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="organizer@example.com" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_organizer_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete" />

</LinearLayout>
