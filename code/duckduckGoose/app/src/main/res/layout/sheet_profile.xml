<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fg_cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with avatar and close button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/person"
                android:contentDescription="@string/empty"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close"
                android:tint="@color/fg_charcoal"/>
        </RelativeLayout>

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_cream"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtUserId"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID: 123456"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtFullName"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name: Jane Duckerson"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtAge"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age: 22"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtEmail"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: jane@example.com"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtPhone"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number: (780) 555-0123"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtAccountType"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Type: Entrant"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/txtEventCount"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events: 0"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtPastEvents"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Events: 0"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtPooledEvents"
                style="@style/Text.Fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pooled Events: 0"
                android:textColor="@color/fg_charcoal"
                android:paddingVertical="4dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Text.Fresh.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_delete"
                app:backgroundTint="@null"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEvents"
                style="@style/Text.Fresh.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_primary_green"
                app:backgroundTint="@null"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Text.Fresh.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/fg_charcoal"
                android:background="@drawable/btn_secondary_silver"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Text.Fresh.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/fg_white"
                android:background="@drawable/btn_primary_charcoal"
                app:backgroundTint="@null"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
